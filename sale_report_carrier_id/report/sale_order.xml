<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sale_report_carrier_id_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']"
            position="inside">
            <div t-if="doc.carrier_id"
                class="col-auto mw-100 mb-2">
                <strong>Delivery Method:</strong>
                <p
                    class="m-0"
                    t-field="doc.carrier_id"/>
            </div>
        </xpath>
    </template>
</odoo>
