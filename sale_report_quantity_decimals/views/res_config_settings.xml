<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.view.form.sale.report.decimal.precision</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="proforma_configuration" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="sale_report_decimal_precision"
                >
                    <div class="o_setting_right_pane">
                        <label for="sale_report_decimal_precision" />
                        <div class="text-muted">
                            Set Decimal Precision on sale report's product quantities
                        </div>
                        <field
                            name="sale_report_decimal_precision"
                            options="{'no_create': True}"
                        />
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
