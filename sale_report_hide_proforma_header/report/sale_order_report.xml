<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_saleorder_document"
        inherit_id="sale_report_title.report_saleorder_document"
    >
        <xpath expr="//t[@t-if='is_pro_forma']/t" position="replace">
            <t t-set="report_title">Invoice</t>
            <t t-set="report_name" t-value="doc.name.replace('SO', '')" />
        </xpath>
    </template>
</odoo>
