<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_saleorder_document"
        inherit_id="sale.report_saleorder_document"
    >
        <xpath
            expr='//div[@t-if="doc.date_order and doc.state not in [&apos;draft&apos;,&apos;sent&apos;]"]'
            position="attributes"
        >
            <attribute name="t-if">1 == 1</attribute>
        </xpath>

        <xpath
            expr='//div[@t-if="doc.date_order and doc.state in [&apos;draft&apos;,&apos;sent&apos;]"]'
            position="attributes"
        >
            <attribute name="t-if">1 == 0</attribute>
        </xpath>
    </template>
</odoo>
