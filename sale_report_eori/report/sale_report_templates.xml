<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <template
        id="report_saleorder_document_add_eori"
        inherit_id="sale.report_saleorder_document"
    >
    <xpath expr="//p[@t-if='doc.partner_id.vat']" position="replace">
      <t t-if="doc.partner_id.vat">
        <t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'" />
        :
        <span t-field="doc.partner_id.vat" />
        <br />
      </t>
      <t t-if="doc.partner_id.eori">
        EORI:
        <span t-field="doc.partner_id.eori" />
        <br />
      </t>
    </xpath>
  </template>
</odoo>
