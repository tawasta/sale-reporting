<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_saleorder_document_commitment_date" inherit_id="sale.report_saleorder_document">
        <xpath expr="//p[@t-field='doc.date_order']/.." position="after">
            <div t-if="doc.commitment_date" name="commitment-date" class="col-auto col-3 mw-100 mb-2">
                <strong>Promised Date:</strong>
                <p class="m-0" t-field="doc.commitment_date"/>
            </div>
        </xpath>
    </template>
</odoo>
