<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="filtered_sale_order_line_tree_view" model="ir.ui.view">
        <field name="name">order.book.log.tree</field>
        <field name="model">order.book.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="datetime"/>
                <field name="sale_order_line"/>
            </tree>
        </field>
    </record>

    <record id="filtered_sale_order_line_form_view" model="ir.ui.view">
        <field name="name">order.book.log.form</field>
        <field name="model">order.book.log</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="datetime"/>
                    <field name="sale_order_line"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_sale_order_line_filtered_list" model="ir.actions.act_window">
        <field name="name">Filtered sale order line list</field>
        <field name="res_model">order.book.log</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="filtered_sale_order_line_tree_view"/>
    </record>

    <menuitem id="menu_sale_order_line_filtered"
              name="Filtered Sale Order Lines"
              parent="sale.menu_sale_report"
              action="action_sale_order_line_filtered_list"/>
</odoo>
