<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@name='reference']" position="after">
            <div
                class="col-auto mw-100 mb-2"
                id="general-sales-terms-container"
                t-if="o.company_id.sale_report_general_sales_terms_text and o.move_type in ['out_invoice', 'out_refund', 'out_receipt']"
            >

                <strong>General Sales Terms:</strong>

                <!-- render as hyperlink, if target was provided. otherwise as text -->
                <p class="m-0">
                    <t
                        t-if="o.company_id.sale_report_general_sales_terms_hyperlink_target"
                    >
                        <a
                            t-att-href="o.company_id.sale_report_general_sales_terms_hyperlink_target"
                            target="_blank"
                        >
                            <t
                                t-esc="o.company_id.sale_report_general_sales_terms_text"
                            />
                        </a>
                    </t>
                    <t t-else="">
                        <t t-esc="o.company_id.sale_report_general_sales_terms_text" />
                    </t>
                </p>
            </div>
        </xpath>
    </template>
</odoo>
